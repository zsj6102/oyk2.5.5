<resources>
    <style name="BottomTab" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@drawable/bottom_tab_text_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="popWindow_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_down_out</item>
    </style>
    <style name="imgIconCommon">
        <item name="android:layout_width">@dimen/distance_25</item>
        <item name="android:layout_height">@dimen/distance_25</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
</resources>
