                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout> -->
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fuzhuxian"
                />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#ffffff"
                 >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="余额支付" 
                    android:textSize="@dimen/mediumsize"
                    android:textColor="@color/zhutitle"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/pay_remainmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:textSize="@dimen/mediumsize"
                    android:textColor="@color/theme_color"
                    android:layout_weight="1"
                     />


                  <RelativeLayout
               android:layout_width="35dp"
               android:layout_height="match_parent"
                android:id="@+id/qita_check"
                >

               <ImageView
                   android:id="@+id/pay_radiobutton"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:src="@mipmap/fukuan_pitch_on" />

           </RelativeLayout>
                

            </LinearLayout>
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fuzhuxian"
                />
            <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:background="#ffffff"
           >

          <TextView
              android:id="@+id/textView5"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="选择其他支付方式" 
              android:textColor="@color/zhutitle"
             android:textSize="@dimen/mediumsize"
             android:gravity="center"
             android:layout_marginLeft="10dp"
              />

          <TextView
              android:id="@+id/pay_qita"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:textSize="@dimen/mediumsize"
              android:textColor="@color/theme_color"
              android:gravity="center|right"
              android:layout_weight="1"
              android:layout_marginRight="10dp"
              />


      </LinearLayout>
       <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fuzhuxian"
        />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="45dp" 
           android:background="#ffffff"
           >

           <ImageView
               android:id="@+id/imageView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/alipay_img"
               android:layout_gravity="center"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="vertical" 
               android:gravity="center_vertical"
               android:layout_weight="1"
               >

               <TextView
                   android:id="@+id/textView7"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="支付宝" 
                   android:textColor="@color/zhutitle"
            	   android:textSize="15sp"
                   />

               <TextView
                   android:id="@+id/textView8"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="推荐拥有支付宝的用户使用" 
                   android:textSize="13sp"
                   />
               
           </LinearLayout>

           <RelativeLayout
               android:layout_width="35dp"
               android:layout_height="match_parent"
                android:id="@+id/chongzhi_alipay"
                >

               <ImageView
                   android:id="@+id/img_alipay"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:src="@mipmap/fukuan_pitch_on" />

           </RelativeLayout>

       </LinearLayout>
       <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fuzhuxian"
        />
       
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="45dp" 
           android:background="#ffffff"
           >

           <ImageView
               android:id="@+id/imageView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/wechat_img"
               android:layout_gravity="center"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="vertical" 
               android:gravity="center_vertical"
               android:layout_weight="1"
               >

               <TextView
                   android:id="@+id/textView71"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="微信支付" 
                   android:textColor="@color/zhutitle"
            	   android:textSize="15sp"
                   />

               <TextView
                   android:id="@+id/textView81"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="推荐已开通微信钱包的用户使用" 
                   android:textSize="13sp"
                   />
               
           </LinearLayout>

           <RelativeLayout
               android:layout_width="35dp"
               android:layout_height="match_parent"
               android:id="@+id/chongzhi_wechat"
                >

               <ImageView
                   android:id="@+id/img_wechat"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:src="@mipmap/fukuan_pitch_on" />

           </RelativeLayout>

       </LinearLayout>
        <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fuzhuxian"
        />
        
        <TextView
        android:id="@+id/chongzhi_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="确认支付"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/button_bg"
        android:layout_margin="15dp"
         />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
