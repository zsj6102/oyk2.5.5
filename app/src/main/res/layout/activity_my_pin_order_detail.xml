<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    tools:context="zsj.com.oyk255.example.ouyiku.v1.MyPinOrderDetailActivity" >
    
    <RelativeLayout
        android:id="@+id/hotnetred_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_color" >

        <RelativeLayout
            android:id="@+id/pintuanorder_back"
            android:layout_width="40dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pintuandetail_titlename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/pintuandetail_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           
             >
            
             <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="收货人："
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/bigtextsize" />

            <TextView
                android:id="@+id/pintuandetail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/bigtextsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="联系电话："
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/bigtextsize" />

            <TextView
                android:id="@+id/pintuandetail_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/bigtextsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="收货地址："
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/bigtextsize" />

            <TextView
                android:id="@+id/pintuandetail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/bigtextsize" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff" 
            android:id="@+id/tobrand"
            >

            <ImageView
                android:id="@+id/pintuandetail_brandimg"
                android:layout_width="48dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/pintuandetail_brandname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/bigtextsize" />

            <RelativeLayout
                android:id="@+id/to_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/right_arrow_shezhi" />
            </RelativeLayout>
        </LinearLayout>
        
             <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#eeeeee" />

             <zsj.com.oyk255.example.ouyiku.view.ScrollViewWithListView
            android:id="@+id/scrollViewWithListView_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </zsj.com.oyk255.example.ouyiku.view.ScrollViewWithListView>
            
        <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
             >

            <TextView
                android:id="@+id/pintuandetail_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未成团"
                android:layout_marginLeft="10dp"
                android:textColor="@color/title_color"
                android:textSize="@dimen/mediumsize"
                android:gravity="center|left"
                android:layout_weight="1"
                
                 />
            
            <TextView
 				    android:id="@+id/pintuandetail_btn1"
 				    android:layout_width="80dp"
 				    android:layout_height="30dp"
 				    android:background="@drawable/button_bg"
 				    android:gravity="center"
 				    android:text="提醒发货"
 				    android:textColor="#ffffff"
 				    android:textSize="13sp"
 				    android:layout_marginRight="10dp" />
            
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fuzhuxian"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" 
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="运费：" 
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/mediumsize"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/order_all_yunfei"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="快递包邮"
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/mediumsize"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                 />
            
        </LinearLayout>
         <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fuzhuxian"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" 
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="价格合计：" 
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/mediumsize"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/pintuandetail_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/mediumsize"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                 />
            
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fuzhuxian"
            />
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" 
            android:background="#ffffff"
            >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="卖家留言：" 
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/mediumsize"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/pintuandetail_liuyan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/smalltextsize"
                android:gravity="center|left"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:ellipsize="end"
                 />

            
        </LinearLayout>
        
               <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee"
        />
           <include
            android:id="@+id/includeorderdetail"
            layout="@layout/include_orderdetail" 
            />
            <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#eeeeee"
        />
          
          
          
          
          
            
        </LinearLayout>
    </ScrollView>
    
     <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" 
                android:background="#ffffff"
                android:orientation="vertical"
                android:id="@+id/pintuandetil_bottom1"
                >
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fuzhuxian"
            />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/order_all_deleteorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="删除订单" 
                        android:textColor="@color/zhutitle"
                        android:textSize="@dimen/bigtextsize"

                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        />

                </RelativeLayout>

            </LinearLayout>
            
      <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" 
                android:background="#ffffff"
                android:orientation="vertical"
                android:id="@+id/pintuandetil_bottom2"
                  android:visibility="gone"
                >
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fuzhuxian"
            />

                  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
             >

            <TextView
                android:id="@+id/ttt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textColor="@color/title_color"
                android:textSize="@dimen/mediumsize"
                android:gravity="center|left"
                android:layout_weight="1"
                
                 />
            
            <TextView
 				    android:id="@+id/pintuandetail_btn2"
 				    android:layout_width="80dp"
 				    android:layout_height="30dp"
 				    android:background="@drawable/button_bg"
 				    android:gravity="center"
 				    android:text="提醒发货"
 				    android:textColor="#ffffff"
 				    android:textSize="13sp"
 				    android:layout_marginRight="10dp" />
            
        </LinearLayout>
        

         </LinearLayout>
         
      <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" 
                android:background="#ffffff"
                android:orientation="vertical"
                android:id="@+id/pintuandetil_bottom3"
                android:visibility="gone"
                >
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fuzhuxian"
            />

               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:layout_marginTop="10dp"
                android:id="@+id/cantuan_daojishi"
                >
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:layout_marginRight="10dp"
                     />

                <TextView
                    android:id="@+id/cantuan_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/bigtextsize"
                    android:textColor="@color/zhutitle"
                    android:gravity="center"
                     />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束"
                     android:layout_weight="1"
                     android:gravity="center|left"
                     android:layout_marginLeft="10dp"
                     />

            </LinearLayout>

            </LinearLayout>

</LinearLayout>
