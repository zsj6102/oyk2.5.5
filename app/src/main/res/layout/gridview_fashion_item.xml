<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fashion_item_img"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:src="@mipmap/logo"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/fashion_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="色粉色色色服务方请求法院建议及肥味儿我还要加" 
        android:textColor="@color/zhutitle"
        android:textSize="@dimen/mediumsize"
        android:lines="2"
        android:ellipsize="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"
        >

        <zsj.com.oyk255.example.ouyiku.view.CircleImageView
            android:id="@+id/fashion_item_touxiang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/logo"
            app:border_color="#ffffff"
            app:border_width="1dp"
            />

        <TextView
            android:id="@+id/fashion_item_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我叫老王" 
            android:textColor="@color/fuzhutitle"
            android:textSize="@dimen/smalltextsize"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/fashion_item_zan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/h_like"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/fashion_item_zannum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="999" 
             android:textColor="@color/fuzhutitle"
            android:textSize="@dimen/smalltextsize"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

</LinearLayout>
