<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <zsj.com.oyk255.example.ouyiku.view.AspectRatioImageView
            android:id="@+id/pintuan_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/logo"
            
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/pintuan_item_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/goods_title"
            android:textColor="@color/theme_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/pintuan_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/goods_title"
            android:textColor="@color/zhutitle"
            android:lines="2"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
         >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="拼团价："
            android:textSize="@dimen/mediumsize"
            android:textColor="@color/zhutitle"
            android:layout_marginLeft="10dp"
            android:gravity="center"
             />

        <TextView
            android:id="@+id/pintuan_item_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/pintuanprice"
            android:gravity="center"
             />
        
        <TextView
            android:id="@+id/pintuan_item_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fuzhutitle"
            android:textSize="@dimen/smalltextsize"
            android:layout_marginLeft="5dp"
            />
        

 			    

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

 				<TextView
 				    android:id="@+id/pintuan_item_btn"
 				    android:layout_width="80dp"
 				    android:layout_height="30dp"
 				    android:layout_alignParentRight="true"
 				    android:layout_centerVertical="true"
 				    android:background="@drawable/button_bg"
 				    android:gravity="center"
 				    android:text="我来开团"
 				    android:textColor="#ffffff"
 				    android:textSize="13sp"
 				    android:layout_marginRight="10dp" />
            
        </RelativeLayout>

        

    </LinearLayout>

</LinearLayout>
