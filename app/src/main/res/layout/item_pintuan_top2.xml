<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        
         >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/new_pintuan"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/shu"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/pintuan_guangbo_ani"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/pintuan_guangbo" 
            android:layout_marginRight="10dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <zsj.com.oyk255.example.ouyiku.view.AutoTextView
                android:id="@+id/autoTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                
                 >
            </zsj.com.oyk255.example.ouyiku.view.AutoTextView>
            
        </RelativeLayout>
        
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fuzhuxian"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/pintuanma"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/pintuan_search_code"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            
             >

            <EditText
                android:id="@+id/pin_et_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textColor="@color/fuzhutitle"
                android:textSize="12sp"
                android:hint="使用拼团码，寻找想要的团"
                android:layout_marginLeft="10dp"
                android:textColorHint="@color/fuzhutitle"
                
                
                />

            <ImageView
                android:id="@+id/pin_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/pintuan_go"
                android:layout_marginRight="4dp"
                />

        </RelativeLayout>

    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/background_color"
        />
    
</LinearLayout>
