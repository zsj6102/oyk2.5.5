<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="zsj.com.oyk255.example.ouyiku.v1.TimeSaleActivity" >

    <RelativeLayout
        android:id="@+id/timesale_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/title_color" >

        <RelativeLayout
            android:id="@+id/timesale_back"
            android:layout_width="30dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="限时抢购"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>

    

    <zsj.com.oyk255.example.ouyiku.view.MyScrollView
        android:id="@+id/timesale_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/timesale_title"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/timesale_topimg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/topimg_height"
                android:src="@mipmap/logo"
                android:scaleType="centerCrop"
                 />
            
            <LinearLayout
        android:id="@+id/search02"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
         >
         
         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
               
                android:id="@+id/timesale_timetitle"
                 >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" 
                    android:layout_weight="1"
                    android:id="@+id/view1"
                     android:background="#999999"
                    >

                    <TextView
                        android:id="@+id/one_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                        android:layout_marginTop="8dp"
                        />

                    <TextView
                        android:id="@+id/one_sale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" 
                    android:layout_weight="1"
                    android:id="@+id/view2"
                     android:background="#999999"
                    >
                    
                      <TextView
                        android:id="@+id/two_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                         android:layout_marginTop="8dp"
                        />

                    <TextView
                        android:id="@+id/two_sale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                         android:layout_marginTop="2dp"
                        />
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" 
                    android:layout_weight="1"
                     android:id="@+id/view3"
                      android:background="#999999"
                    >
                    
                      <TextView
                        android:id="@+id/three_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                         android:layout_marginTop="8dp"
                        />

                    <TextView
                        android:id="@+id/three_sale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                         android:layout_marginTop="2dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" 
                    android:layout_weight="1"
                     android:id="@+id/view4"
                      android:background="#999999"
                    >
                    
                      <TextView
                        android:id="@+id/four_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                         android:layout_marginTop="8dp"
                        />

                    <TextView
                        android:id="@+id/four_sale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                         android:layout_marginTop="2dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" 
                    android:layout_weight="1"
                     android:id="@+id/view5"
                      android:background="#999999"
                    >
                    
                    
                      <TextView
                        android:id="@+id/five_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                         android:layout_marginTop="8dp"
                        />

                    <TextView
                        android:id="@+id/five_sale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/smalltextsize"
                         android:layout_marginTop="2dp"
                        />
                </LinearLayout>
                
            </LinearLayout>
                
                
    </LinearLayout>

            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="限时限量  低价疯狂" 
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/smalltextsize"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    />

          <!--       <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="距离结束" 
                     android:gravity="center|right"
                     android:textSize="@dimen/smalltextsize"
                     android:textColor="@color/zhutitle"
                     android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="时间" 
                     android:gravity="center"
                     android:textSize="@dimen/smalltextsize"
                     android:textColor="@color/zhutitle"
                     android:layout_marginLeft="5dp"
                     android:layout_marginRight="10dp"
                    /> -->

            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fuzhuxian"
                />
            
            <ImageView
                 android:id="@+id/timeimg_null"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:src="@mipmap/ninezeronull"
                 android:layout_marginTop="60dp"
                 android:visibility="gone"
                  />

            <zsj.com.oyk255.example.ouyiku.view.ScrollViewWithListView
                android:id="@+id/timesale_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </zsj.com.oyk255.example.ouyiku.view.ScrollViewWithListView>
            
        </LinearLayout>
    </zsj.com.oyk255.example.ouyiku.view.MyScrollView>
    
    <LinearLayout
        android:id="@+id/search01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
         >
    </LinearLayout>
 
</RelativeLayout>
