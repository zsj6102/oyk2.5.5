<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="zsj.com.oyk255.example.ouyiku.v1.Creat_fashionActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" 
        android:background="@color/title_color"
        >

        <RelativeLayout
            android:id="@+id/creatfashion_back"
            android:layout_width="30dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发表文章"
            android:textSize="@dimen/title_size"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center"
             />

        
        
         <RelativeLayout
            android:id="@+id/creatfashion_sendview"
            android:layout_width="30dp"
            android:layout_height="match_parent" >

          <ImageView
            android:id="@+id/creatfashion_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/h_go"
            android:layout_marginRight="10dp"
            />
        </RelativeLayout>

    </LinearLayout>

    

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="标题:" 
            android:textColor="@color/zhutitle"
            android:textSize="@dimen/bigtextsize"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/creatfashion_title_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10" 
            android:background="@null"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fuzhuxian"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="类别:" 
            android:textColor="@color/zhutitle"
            android:textSize="@dimen/bigtextsize"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/creatfashion_leibie2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="主播" 
            android:gravity="center"
            android:textColor="@color/futitle"
            android:textSize="@dimen/bigtextsize"
            android:drawableRight="@mipmap/h_arrows"
            />


    </LinearLayout>

    
    <EditText
		android:layout_margin="10dp"        
        android:id="@+id/creatfashion_share_edt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10" 
        android:background="#eeeeee"
        android:gravity="top|left"
        android:hint="#分享下你的想法吧！"
        android:padding="5dp"
        android:textSize="@dimen/bigtextsize"
        >

        <requestFocus />
    </EditText>
    <!-- <ImageView
        android:id="@+id/creatfashion_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/after_sale_img_b" 
        android:layout_marginLeft="10dp"
        /> -->

    <zsj.com.oyk255.example.ouyiku.view.MyGridView
        android:id="@+id/fashion_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3" 
        android:layout_margin="10dp"
        >
    </zsj.com.oyk255.example.ouyiku.view.MyGridView>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
