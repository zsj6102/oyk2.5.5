<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#00000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="#eeeeee"
        android:layout_marginTop="100dp"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="修改头像" 
                android:layout_marginLeft="10dp"
                android:textColor="@color/zhutitle"
                android:gravity="center"
                android:textSize="@dimen/mediumsize"
                />

        </LinearLayout>
         <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fuzhuxian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="45dp" 
             android:id="@+id/pop_pictureview"
             >

             <ImageView
                 android:id="@+id/imageView1"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:src="@mipmap/photo_one_67"
                 android:layout_gravity="center"
                 android:layout_marginLeft="10dp"
                 />

             <TextView
                 android:id="@+id/pop_picture"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="相册"
                  android:layout_marginLeft="10dp"
                android:textColor="@color/zhutitle"
                android:gravity="center|left"
                android:textSize="@dimen/mediumsize"
                  />
             
         </LinearLayout>
          <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fuzhuxian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
          
          <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:id="@+id/pop_photoview"
              >

             <ImageView
                 android:id="@+id/imageView2"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:src="@mipmap/photo_two_50"
                 android:layout_gravity="center"
                 android:layout_marginLeft="10dp"
                 />

             <TextView
                 android:id="@+id/pop_photo"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="照相"
                  android:layout_marginLeft="10dp"
                android:textColor="@color/zhutitle"
                android:gravity="center|left"
                android:textSize="@dimen/mediumsize"
                  />
             
         </LinearLayout>
         <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fuzhuxian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="45dp" >

             <TextView
                 android:id="@+id/head_queding"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginRight="10dp"
                 android:gravity="center|right"
                 android:text="确定"
                 android:textSize="@dimen/bigtextsize" />

         </RelativeLayout>
         
    </LinearLayout>

</LinearLayout>
