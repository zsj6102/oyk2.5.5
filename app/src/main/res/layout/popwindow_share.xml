<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#00000000"
    >
    

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_alignParentBottom="true"
            android:id="@+id/pop_layout"
            android:background="#ffffff"
            
            >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fuzhuxian"
        
        />


     <LinearLayout
        android:id="@+id/lin_share3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="12dip"
        
         >

        <TextView
            android:id="@+id/iv_share_wx3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/wxhaoyou"
            android:gravity="center"
            android:text="微信"
            android:textSize="14sp" 
            android:textColor="@color/zhutitle"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/iv_share_pyq3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:drawableTop="@mipmap/wxpyq"
            android:gravity="center"
            android:text="朋友圈"
            android:textSize="14sp" 
            android:textColor="@color/zhutitle"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            />
        
           <TextView
            android:id="@+id/iv_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:drawableTop="@mipmap/qqhaoyou"
            android:gravity="center"
            android:text="QQ"
            android:textSize="14sp" 
            android:textColor="@color/zhutitle"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            />
           
           <TextView
            android:id="@+id/iv_share_qqzong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:drawableTop="@mipmap/qqzong"
            android:gravity="center"
            android:text="QQ空间"
            android:textSize="14sp" 
            android:textColor="@color/zhutitle"
            android:drawablePadding="4dp"
            android:layout_weight="1"
            />
        
    </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
