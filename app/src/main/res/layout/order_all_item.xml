<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
     >
	<View 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#eeeeee"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" 
        android:id="@+id/order_tobrand"
        >

        <ImageView
            android:id="@+id/order_brand_img"
            android:layout_width="48dp"
            android:layout_height="25dp"
            android:src="@mipmap/logo"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/order_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/bigtextsize"
            android:textColor="@color/text_color"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:id="@+id/to_brand"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/right_arrow_shezhi" />

        </RelativeLayout>

    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c9c9c9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/order_goods_img"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@mipmap/logo"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/goods_title"
                android:textColor="@color/zhutitle"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp" >
                
                <TextView
                android:id="@+id/order_goods_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smalltextsize"
                android:textColor="@color/fuzhutitle"
                android:layout_marginTop="5dp"
                />

                <!-- <TextView
                    android:id="@+id/order_goods_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ML" 
                    android:textSize="@dimen/smalltextsize"
               	    android:textColor="@color/fuzhutitle"
             	    android:layout_marginTop="5dp"
             	    android:layout_marginLeft="5dp"
                    /> -->

            </LinearLayout>

            <TextView
                android:id="@+id/order_goods_newprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bigtextsize"
                android:textColor="@color/zhutitle"
                android:gravity="right"
                android:layout_marginRight="10dp"
                
                />

            <TextView
                android:id="@+id/order_goods_oldprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/smalltextsize"
               	android:textColor="@color/fuzhutitle"
               	android:gravity="right"
               	android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/order_goods_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/smalltextsize"
               	android:textColor="@color/fuzhutitle"
                 />

        </LinearLayout>
        

    </LinearLayout>
     <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c9c9c9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="45dp" >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:text="合计：" 
             android:gravity="right|center"
             android:textSize="@dimen/smalltextsize"
             android:textColor="@color/zhutitle"
             />

         <TextView
             android:id="@+id/order_goods_allprice"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:textSize="@dimen/bigtextsize"
              android:textColor="@color/theme_color"
              android:layout_marginRight="10dp"
             />

     </LinearLayout>
     <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c9c9c9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp" 
         android:id="@+id/all_delete"
         >
         

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

             <TextView
                 android:id="@+id/order_goods_delete"
                 android:layout_width="90dp"
                 android:layout_height="match_parent"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_margin="10dp"
                 android:layout_marginRight="10dp"

                 android:gravity="center"
                 android:padding="3dp"
                 android:text="删除订单"
                 android:textColor="@color/zhutitle" />
             
         </RelativeLayout>

     </LinearLayout>
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:id="@+id/all_tixing"
          >
         

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

             <TextView
                 android:id="@+id/order_goods_tixing"
                 android:layout_width="90dp"
                 android:layout_height="match_parent"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_margin="10dp"
                 android:layout_marginRight="10dp"
                 android:background="@drawable/button_bg"
                 android:gravity="center"
                 android:text="提醒发货"
                 android:textColor="#ffffff" />
             
         </RelativeLayout>

     </LinearLayout>
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:id="@+id/all_daifu"
          >
         

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

             <TextView
                 android:id="@+id/order_goods_fukuan"
                 android:layout_width="45dp"
                 android:layout_height="match_parent"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_margin="10dp"
                 android:layout_marginRight="10dp"
                 android:background="@drawable/button_bg"
                 android:gravity="center"
                 android:text="付款"
                 android:textColor="#ffffff" />

             <TextView

                 android:layout_width="90dp"
                 android:layout_height="match_parent"
                 android:layout_marginRight="20dp"
                 android:layout_toLeftOf="@+id/order_goods_fukuan"
                 android:text="删除订单" 

                 android:gravity="center"
                  android:layout_margin="10dp"
                  android:padding="3dp"
                  android:textColor="@color/zhutitle"
                 />
             
         </RelativeLayout>

     </LinearLayout>
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp" 
         android:id="@+id/all_queren"
         >
         

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

             <TextView
                 android:id="@+id/order_goods_shouhuo"
                 android:layout_width="90dp"
                 android:layout_height="match_parent"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_margin="10dp"
                 android:layout_marginRight="10dp"
                 android:background="@drawable/button_bg"
                 android:gravity="center"
                 android:text="确认收货"
                 android:textColor="#ffffff" />

             <TextView
                 android:id="@+id/order_goods_wuliu"
                 android:layout_width="90dp"
                 android:layout_height="match_parent"
                 android:layout_marginRight="20dp"
                 android:layout_toLeftOf="@+id/order_goods_shouhuo"
                 android:text="物流查询" 

                 android:gravity="center"
                  android:layout_margin="10dp"
                  android:padding="3dp"
                  android:textColor="@color/zhutitle"
                 />
             
         </RelativeLayout>

     </LinearLayout>

</LinearLayout>
