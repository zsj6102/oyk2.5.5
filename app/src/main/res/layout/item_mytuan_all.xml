<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp" 
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        >
        
        <View 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/fuzhuxian"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="1"
           
            >
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fuzhuxian"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" 
                android:id="@+id/mypin_tobrand"
                >

                <ImageView
                    android:id="@+id/mypin_brandlogo"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/logo"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/mypin_brandname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/zhutitle"
                    android:textSize="@dimen/mediumsize"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/right_arrow_shezhi"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/fuzhuxian"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/todetail"
                 >

                <ImageView
                    android:id="@+id/mypin_goodspic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/logo"
                    android:layout_margin="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/mypin_goodstitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/zhutitle"
                        android:textSize="@dimen/goods_title"
                        android:lines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        />

                    <TextView
                        android:id="@+id/mypin_attr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fuzhutitle"
                        android:textSize="@dimen/smalltextsize"
                        android:layout_marginTop="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                         >

                        <TextView
                            android:id="@+id/mypin_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/theme_color"
                            android:textSize="@dimen/mediumsize"
                            android:gravity="bottom"
                             />

                        <TextView
                            android:id="@+id/mypin_people"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/fuzhutitle"
                            android:textSize="@dimen/smalltextsize"
                             android:gravity="bottom"
                            android:layout_marginLeft="10dp"
                             />

                        <TextView
                            android:id="@+id/mypin_status"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/mediumsize"
                            android:textColor="@color/zhutitle"
                            android:layout_weight="1"
                             android:gravity="bottom|right"
                             android:layout_marginRight="10dp"
                            />
                        
                    </LinearLayout>

                </LinearLayout>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
					>
                
                
               <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

             <TextView
                 android:id="@+id/mypin_lookorder"
                 android:layout_width="90dp"
                 android:layout_height="match_parent"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_margin="10dp"
                 android:layout_marginRight="10dp"

                 android:gravity="center"
                 android:padding="3dp"
                 android:text="查看订单"
                 android:textColor="@color/zhutitle" />

               <TextView
                   android:id="@+id/mypin_lookdetail"
                   android:layout_width="90dp"
                   android:layout_height="match_parent"
                   android:layout_centerHorizontal="true"
                   android:layout_centerVertical="true"
                   android:layout_margin="10dp"

                   android:gravity="center"
                   android:padding="3dp"
                   android:text="拼团详情"
                   android:textColor="@color/zhutitle" />
             
         </RelativeLayout>

                
            </LinearLayout>
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fuzhuxian"
                />
            
        </LinearLayout>
        
        <View 
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/fuzhuxian"
            android:layout_marginRight="10dp"
            />
        

    </LinearLayout>

</LinearLayout>
