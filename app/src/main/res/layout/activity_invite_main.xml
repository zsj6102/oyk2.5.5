<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/invitelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="zsj.com.oyk255.example.ouyiku.v1.InviteActivity" >

 <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_color" >

        <RelativeLayout
            android:id="@+id/invite_back"
            android:layout_width="30dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的邀请"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
                

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="您的邀请码：" 
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/invite_yaoqingma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/invite_copy"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="复制" 
            android:layout_marginRight="10dp"

            android:padding="3dp"
            android:textSize="13dp"
            android:gravity="center"
            />

    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        />

    <ImageView
        android:id="@+id/invite_erweima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
         />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请好友扫一扫，现金卷拿不停"
        android:textSize="15sp"
        android:textColor="@color/theme_color"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请码使用方法"
        android:textSize="15sp"
         android:layout_marginLeft="10dp"
         />

    <TextView
        android:id="@+id/invite_yao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yaoqingshiyong1" 
        android:lineSpacingExtra="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        />
         
    <TextView
        android:id="@+id/invite_yao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yaoqingshiyong2" 
        android:lineSpacingExtra="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/invite_yao3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yaoqingshiyong3" 
        android:lineSpacingExtra="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        />
    
    <TextView
		    android:id="@+id/invite_share"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:text="分享给好友" 
		    android:textSize="20sp"
		    android:textColor="#ffffff"
		    android:background="@drawable/button_bg"
		    android:gravity="center"
		    android:layout_margin="15dp"
		    />

    <TextView
        android:id="@+id/invite_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邀请记录>>" 
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
          android:layout_marginBottom="20dp"
        />

        </LinearLayout>
    </ScrollView>

</LinearLayout>