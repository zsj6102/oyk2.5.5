<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zsj.com.oyk255.example.ouyiku.v1.PinDetailTopFragment"
    android:background="#ffffff"
    >
    
      <zsj.com.oyk255.example.ouyiku.draglayout.CustScrollView
        android:id="@+id/custScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:id="@+id/RelativeLayout11"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                
                >

                <zsj.com.oyk255.example.ouyiku.view.CustomViewPager
                    android:id="@+id/pintuandetail_lunbo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" >
                </zsj.com.oyk255.example.ouyiku.view.CustomViewPager>

                <zsj.com.oyk255.example.ouyiku.view.ViewpageIndicator
                    android:id="@+id/pintuandetailviewpageIndicator2"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c9c9c9" />
            </RelativeLayout>
            
            
            
            <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="50dp" 
	     android:background="@color/theme_color"
	   		  >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="参团价：" 
                    android:textColor="#ffffff"
                    android:textSize="@dimen/goods_title"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/pintuandetail_newprice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/mediumsize"
                    android:gravity="center"
                    
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    
                     >

                    <TextView
                        android:id="@+id/pintuandetail_oldprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff" 
                        android:textSize="10sp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        />
                    
                    
                    <TextView
            android:id="@+id/pintuandetail_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_pintuan"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/smalltextsize" 
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
				/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" 
                    android:background="@mipmap/end_bg"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="距本团结束" 
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/pintuandetail_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        />
                    
                </LinearLayout>
          
	 </LinearLayout>
            
            
      <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="60dp" >
                
           <TextView
    android:id="@+id/pintuandetail_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:lines="2"
    android:ellipsize="end"
    android:textColor="@color/zhutitle"
    android:textSize="@dimen/goods_title"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_weight="1"
     />

           <ImageView
               android:id="@+id/pintuandetail_collect"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@mipmap/sc"
               android:layout_gravity="center"
               android:layout_marginRight="10dp"
                />
          
	 </LinearLayout>
            
	 
	 <View 
	     android:layout_width="match_parent"
	     android:layout_height="10dp"
	     android:background="#eeeeee"
	     />
	 
	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="90dp"
	     android:orientation="vertical" >

	     <TextView
	         android:id="@+id/pintuandetail_kaituan"
	         android:layout_width="80dp"
	         android:layout_height="30dp"
	         android:text="已开团" 
	         android:background="@color/title_color"
	         android:gravity="center"
	         android:textSize="@dimen/mediumsize"
	         android:textColor="#ffffff"
	         />

	     <LinearLayout
	         android:layout_width="match_parent"
	         android:layout_height="match_parent" 
	         android:background="@color/title_color"
	         >

	         <ImageView
	             android:id="@+id/imageView3"
	             android:layout_width="wrap_content"
	             android:layout_height="match_parent"
	             android:src="@mipmap/pin_logo"
	             android:layout_marginLeft="15dp"
	              />

	         <TextView
	             android:id="@+id/textView6"
	             android:layout_width="wrap_content"
	             android:layout_height="match_parent"
	             android:text="帮您找到最优质的团"
	             android:textSize="@dimen/mediumsize"
	             android:textColor="#ffffff"
	             android:gravity="center"
	             android:layout_weight="1"
	              />

	         <TextView
	             android:id="@+id/pintuandetail_cantuan"
	             android:layout_width="80dp"
	             android:layout_height="30dp"
	             android:text="参团"
	             android:background="@drawable/button_cantuan"
	             android:textColor="#ffffff"
	             android:textSize="@dimen/mediumsize"
	             android:gravity="center"
	             android:layout_marginRight="10dp"
	              />

	     </LinearLayout>
	     
	 </LinearLayout>
	 <ImageView
	          android:id="@+id/pintuandetail_rule"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_weight="1"
	          android:src="@mipmap/pt_rule" />
	 
	  <View 
	     android:layout_width="match_parent"
	     android:layout_height="10dp"
	     android:background="#eeeeee"
	     />
	 <ImageView
	     android:id="@+id/imageView1"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:src="@mipmap/buy_bg" />
	 
	  <View 
	     android:layout_width="match_parent"
	     android:layout_height="10dp"
	     android:background="#eeeeee"
	     />
	  
	  <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="45dp" >

	      

	     <TextView
	         android:id="@+id/textView2"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:text="规格" 
	         android:textColor="@color/zhutitle"
	         android:textSize="@dimen/mediumsize"
	         android:gravity="center|left"
	         android:layout_marginLeft="10dp"
	         android:layout_weight="1"
	         />
	     
	      <TextView
	         android:id="@+id/pintuandetail_attr"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	          android:textColor="@color/zhutitle"
	         android:textSize="@dimen/mediumsize"
	         android:layout_marginRight="10dp"
	         />

	     <ImageView
	         android:id="@+id/imageView2"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:src="@mipmap/right_arrow_shezhi"
	         android:layout_marginRight="10dp"
	          />
	    


	 </LinearLayout>
	 
	   <View 
	     android:layout_width="match_parent"
	     android:layout_height="5dp"
	     android:background="#eeeeee"
	     />
	  
	   <include
                android:id="@+id/detailstore"
                layout="@layout/detail_store" 
                />

	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="45dp"
	     android:orientation="vertical" >

	     <TextView
	         android:id="@+id/textView1"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:gravity="center"
	         android:text="图文详情"
	         android:textColor="@color/zhutitle"
	         android:textSize="@dimen/bigtextsize" />

	 </LinearLayout>
	 <View 
	     android:layout_width="match_parent"
	     android:layout_height="0.5dp"
	     android:background="@color/fuzhuxian"
	     />

	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="45dp"
	     android:background="#eeeeee"
	      >
	     
	     <View 
	         android:layout_width="match_parent"
	         android:layout_height="0.5dp"
	         android:background="@color/fuzhuxian"
	         android:layout_gravity="center"
	         android:layout_weight="1"
	         android:layout_marginLeft="10dp"
	         android:layout_marginRight="10dp"
	         />

	     <TextView
	         android:id="@+id/textView4"
	         android:layout_width="wrap_content"
	         android:layout_height="match_parent"
	         android:text="继续拖动查看详情" 
	         android:textSize="@dimen/mediumsize"
	         android:textColor="@color/zhutitle"
	         android:gravity="center"
	         />
	     
	     
	      <View 
	         android:layout_width="match_parent"
	         android:layout_height="0.5dp"
	         android:background="@color/fuzhuxian"
	         android:layout_gravity="center"
	         android:layout_weight="1"
	         android:layout_marginRight="10dp"
	         android:layout_marginLeft="10dp"
	         
	         />
	     
	 </LinearLayout>

	 
            
        </LinearLayout>
    </zsj.com.oyk255.example.ouyiku.draglayout.CustScrollView>
    

</LinearLayout>
