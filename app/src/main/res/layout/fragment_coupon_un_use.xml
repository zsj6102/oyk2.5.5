<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zsj.com.oyk255.example.ouyiku.fragment.Coupon_unUseFragment" >
    
    <ImageView
        android:id="@+id/hb_nullimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/null_hb"
        android:layout_marginTop="80dp"
        android:visibility="gone"
        />
    
     <zsj.com.oyk255.example.ouyiku.pullableview.PullToRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/refresh_head" />
    
     <zsj.com.oyk255.example.ouyiku.pullableview.PullableListView
        android:id="@+id/coupon_listview_nouse"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:divider="#00000000"
        >
    </zsj.com.oyk255.example.ouyiku.pullableview.PullableListView>
    
     <include layout="@layout/load_more" />

</zsj.com.oyk255.example.ouyiku.pullableview.PullToRefreshLayout>

</LinearLayout>
