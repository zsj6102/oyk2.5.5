<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="zsj.com.oyk255.example.ouyiku.v1.PaySuccessActivity" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" 
        android:background="@color/title_color"
        >

        <RelativeLayout
            android:id="@+id/paysuccess_back"
            android:layout_width="30dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="支付成功"
            android:textColor="#ffffff"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/success_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/success_bg"
                />
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#eeeeee"
                />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:id="@+id/to_address"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    
                    
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" 
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="收货人："
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/mediumsize" />

            <TextView
                android:id="@+id/success_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/futitle"
                android:textSize="@dimen/mediumsize" 
                android:layout_weight="1"
                />


        </LinearLayout>
        
                     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" 
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:text="联系电话："
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/mediumsize" />

            <TextView
                android:id="@+id/success_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/futitle"
                android:textSize="@dimen/mediumsize" 
                android:layout_weight="1"
                />
        </LinearLayout>
                    
               <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" 
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:text="收货地址："
                android:textColor="@color/zhutitle"
                android:textSize="@dimen/mediumsize" />

            <TextView
                android:id="@+id/success_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/futitle"
                android:textSize="@dimen/mediumsize" 
                android:layout_weight="1"
                
                />
        </LinearLayout>     
                    
                </LinearLayout>

            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fuzhuxian"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                     >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="总价:" 
                        android:textSize="@dimen/mediumsize"
                        android:textColor="@color/zhutitle"
                        android:layout_marginRight="10dp"
                        />

                    <TextView
                        android:id="@+id/paysuccess_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/mediumsize"
                        android:textColor="@color/theme_color"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp" 
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:id="@+id/paysuccess_order"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="10dp"
                        android:text="查看订单" 
                        android:textColor="@color/zhutitle"
                        android:textSize="@dimen/mediumsize"
                        android:background="@mipmap/rest"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        />
                    
                </RelativeLayout>

            </LinearLayout>
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/fuzhuxian"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" 
                android:background="#eeeeee"
                >

                   	<TextView
                   	    android:id="@+id/textView6"
                   	    android:layout_width="wrap_content"
                   	    android:layout_height="match_parent"
                   	    android:layout_alignParentTop="true"
                   	    android:layout_centerHorizontal="true"
                   	    android:drawableLeft="@mipmap/lovesuccess"
                   	    android:gravity="center"
                   	    android:text="猜您可能喜欢"
                   	    android:textColor="@color/zhutitle"
                   	    android:textSize="@dimen/mediumsize" />
                
            </RelativeLayout>

            <zsj.com.oyk255.example.ouyiku.view.MyGridView
                android:id="@+id/success_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2" 
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:background="#eeeeee"
                >
            </zsj.com.oyk255.example.ouyiku.view.MyGridView>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
