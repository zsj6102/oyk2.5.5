<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp" >

        <ImageView
            android:id="@+id/zeroitem_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/logo"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/zeroitemtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/mediumsize"
                android:textColor="@color/zhutitle"
                android:lines="1"
                android:ellipsize="end"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" 
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/zeroitem_newprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/mediumsize"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:id="@+id/zeroitem_oldprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fuzhutitle"
                        android:textSize="@dimen/smalltextsize"
                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>

               

               

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/zeroitem_qianggouimg"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/handbuy" />

                      <TextView
                          android:id="@+id/zeroitem_num"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignTop="@+id/zeroitem_qianggouimg"
                          android:layout_centerHorizontal="true"
                          android:textSize="10sp" 
                          android:layout_marginTop="2dp"
                          android:textColor="@color/zhutitle"
                          />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
