<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BindLAYOUT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zsj.com.oyk255.example.ouyiku.v1.BindCardActivity"
    android:background="#ffffff"
     >
     
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" 
        android:background="@color/title_color"
        android:id="@+id/hotnetred_title"
        >

        <RelativeLayout
            android:id="@+id/bind_back"
            android:layout_width="40dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/hotnetred_titlename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="绑定银行卡"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" 
                android:id="@+id/view_bank"
                >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="开户银行" 
                    android:textColor="@color/zhutitle"
                    android:textSize="@dimen/mediumsize"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                
                
                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/futitle"
                    android:textSize="@dimen/mediumsize"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />


                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:id="@+id/img_bankview"
                     >

                    <ImageView
                        android:id="@+id/img_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/address_select" />

                </RelativeLayout>

            </LinearLayout>
            
           <View 
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/fuzhuxian"
               />
           
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" 
                android:id="@+id/view_address"
                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="开户城市" 
                    android:textColor="@color/zhutitle"
                    android:textSize="@dimen/mediumsize"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/futitle"
                    android:textSize="@dimen/mediumsize"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />



                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent" 
                    android:id="@+id/img_cityview">

                    <ImageView
                        android:id="@+id/img_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/address_select" />

                </RelativeLayout>

            </LinearLayout>
           
            <View 
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/fuzhuxian"
               />
           
           
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="分行地址" 
                    android:textColor="@color/zhutitle"
                    android:textSize="@dimen/mediumsize"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

                <EditText
                    android:id="@+id/et_city2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10" 
                    android:textColor="@color/futitle"
                    android:textSize="@dimen/mediumsize"
                     android:background="@null"
                    >

                    <requestFocus />
                </EditText>


            </LinearLayout>
           
          <View 
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/fuzhuxian"
               />
           
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="银行卡号" 
                    android:textColor="@color/zhutitle"
                    android:textSize="@dimen/mediumsize"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

                <EditText
                    android:id="@+id/et_banknum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10" 
                    android:textColor="@color/futitle"
                    android:textSize="@dimen/mediumsize"
                         android:background="@null"
                    >

                    <requestFocus />
                </EditText>


            </LinearLayout>
            <View 
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/fuzhuxian"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="开户姓名" 
                    android:textColor="@color/zhutitle"
                    android:textSize="@dimen/mediumsize"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10" 
                    android:textColor="@color/futitle"
                    android:textSize="@dimen/mediumsize"
                      android:background="@null"
                    >

                    <requestFocus />
                </EditText>


            </LinearLayout>
            <View 
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/fuzhuxian"
               />
            
           <LinearLayout
 			    android:layout_width="match_parent"
 			    android:layout_height="45dp"
 			    android:orientation="vertical"
 			    android:background="@drawable/button_bg"
 			     android:layout_marginLeft="10dp"
 			     android:layout_marginRight="10dp"
 			     android:layout_marginTop="20dp"
 			     >

 				<TextView
 				    android:id="@+id/bind_btn"
 				    android:layout_width="match_parent"
 				    android:layout_height="match_parent"
 				    android:text="确认提交" 
 				    android:textSize="17sp"
 				    android:textColor="#ffffff"
 				    android:gravity="center"
 				    />
 			    
 			</LinearLayout>
           
           
           
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
